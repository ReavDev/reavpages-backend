    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.6.3",
    "nodemailer": "^6.9.15",
    "twilio": "^5.3.1",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^6.4.16",
    "@types/validator": "^13.12.2",
    "eslint": "^9.11.0",
